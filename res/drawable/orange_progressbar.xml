<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"> 
 <item android:id="@+id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient android:startColor="#FDD36D"
                android:centerColor="#FDD36D"  
                android:centerY="0.75"
                android:endColor="#FDD36D"
                android:angle="270" />  
        </shape>
    </item>
    <item android:id="@+id/progress" > 
    	 <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient android:startColor="#DA7600"
                    			android:endColor="#DA7600"
                    			android:angle="270" />
            </shape> 
        </clip>
    </item>   
</layer-list>