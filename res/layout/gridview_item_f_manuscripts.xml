<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
        android:id="@+id/linearLayoutThumbnailAndText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip"
        >
        <ImageView  
	        android:id="@+id/imageViewGridViewItemPic_gvIFM"  
	       	android:layout_width="130dip" 
			android:layout_height="130dip" 
			android:layout_centerHorizontal="true"
	        android:contentDescription="@string/defaultContentDesc" />  
	    <TextView  
	        android:id="@+id/textViewGridViewItemText_gvIFM"  
	        android:layout_width="wrap_content"
			android:layout_below="@id/imageViewGridViewItemPic_gvIFM" 
			android:layout_height="wrap_content"
			android:text="" 
			android:layout_centerHorizontal="true"/>
   		<ImageView
   		    android:id="@+id/imageViewGridViewItemRemove_gvIFM"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:layout_alignParentRight="true"
   		    android:layout_alignParentTop="true"
   		    android:background="@drawable/phone_common_removeaccessories"
   		    android:contentDescription="@string/defaultContentDesc" />
    </RelativeLayout>
