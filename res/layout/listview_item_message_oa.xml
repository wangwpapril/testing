<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
        android:layout_width="match_parent"
        android:layout_height="110dip"
        android:id="@+id/RelativeLayoutMsgItem_MOA"  > 
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlListViewSC_MOA" 
        android:layout_marginTop = "5dip"
        android:layout_marginLeft = "5dip"
        android:layout_marginRight = "5dip"
        android:layout_marginBottom = "5dip"
        android:layout_alignParentLeft="true"
	    android:paddingLeft="5dip"
	    android:paddingRight="5dip">
	    <TextView
	        android:id="@+id/textViewItemDepartmentTitle_MOA"
		    android:layout_width="wrap_content"
		   	android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:text="@string/oa_listviewitem_department"
		    style="@style/OAMessage_Department" />
	    <TextView
		    android:id="@+id/textViewItemDepartment_MOA"
		    android:layout_width="wrap_content"
		   	android:layout_height="wrap_content"
		   	android:layout_toRightOf="@id/textViewItemDepartmentTitle_MOA"
		    android:text="信息中心"
		    style="@style/OAMessage_Department" />
	    <TextView
	        android:id="@+id/textViewItemWriterTitle_MOA"
		    android:layout_width="wrap_content"
		   	android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_marginTop="5dip"
		    android:text="@string/oa_listviewitem_writer"
		    android:layout_below="@id/textViewItemDepartmentTitle_MOA"
		    style="@style/OAMessage_Department" />
	    <TextView
   		    android:id="@+id/textViewItemWriter_MOA"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		   	android:layout_toRightOf="@id/textViewItemWriterTitle_MOA"
   		   	android:layout_below="@id/textViewItemDepartmentTitle_MOA"
   		   	android:layout_marginTop="5dip"
   		   	style="@style/OAMessage_Writer"
   		   	android:text="温宇俊"/>
	    
	    <!--  <TextView
	        android:id="@+id/textViewItemTitleTitle_MOA"
		    android:layout_width="wrap_content"
		   	android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_marginTop="5dip"
		    android:text="@string/oa_listviewitem_title"
		    android:layout_below="@id/textViewItemWriter_MOA"
		    style="@style/OAMessage_Title" />-->
   		<TextView
   			android:id = "@+id/textViewItemTitle_MOA"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_below="@id/textViewItemWriter_MOA"
			android:layout_marginTop="5dip"
			android:ellipsize="end"
			android:lines="1"
		    style = "@style/OAMessage_Title"/>
		  <TextView
		    android:id="@+id/textViewItemPublishtime_MOA"
		    android:layout_width="wrap_content"
		   	android:layout_height="wrap_content"
		   	android:layout_below = "@id/textViewItemTitle_MOA"
		   	android:layout_alignParentRight="true"
		    android:layout_marginTop="5dip"
		    android:layout_marginRight="15dip"
		    style="@style/OAMessage_Date" 
		    android:text="2012-1-13 : 12:20:20"/>
   	</RelativeLayout> 
   	<ImageView
		    android:id="@+id/imageViewDivider_MessageMOAItem"		    
		    android:layout_width="match_parent"
		    android:layout_height="5dip"
		    android:src="@drawable/manuscript_listview_seperation_line"
		    android:layout_alignParentBottom="true"
		    android:layout_marginTop="5dip"/>
</RelativeLayout>
