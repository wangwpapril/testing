<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
     
    android:layout_gravity="bottom">
    
    <ScrollView
	    android:id="@+id/scrollView1"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >

	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical" >
	        
	        <ImageView
		        android:id="@+id/logo"
		        android:layout_width="match_parent"
		        android:layout_height="200dp"
		        android:src="@drawable/logo3" />
		    
				<LinearLayout
				    android:id="@+id/signinEmailLayout"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_below="@+id/logo"
				    android:gravity="center_horizontal" >
				    
			
				    <EditText
				        android:id="@+id/signinEmailEditText"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_horizontal"
				        android:ems="10"
				        android:gravity="center_vertical|center_horizontal|center"
				        android:hint="Username"
				        android:inputType="textEmailAddress" >

				    </EditText>
		
		   		</LinearLayout>
		   		
				<LinearLayout
				    android:id="@+id/signinPasswordLayout"
				    android:layout_marginTop="20dp"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_below="@+id/signinEmailLayout"
				    android:gravity="center_horizontal" >
				    
			
				    <EditText
				        android:id="@+id/signinPasswordEditText"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_horizontal"
				        android:ems="10"
				        android:gravity="center_vertical|center_horizontal|center"
				        android:hint="Password"
				        android:inputType="textPassword" >

				    </EditText>

		   		</LinearLayout>
		   		
				<CheckBox
				    android:id="@+id/autoLoginCheckBox"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_below="@+id/signinPasswordLayout"
				    android:layout_marginTop="20dp"
				    android:text="Auto-login" />
		   		
				<Button 
				    android:id="@+id/butSignIn"
				    android:layout_marginTop="20dp"
				    android:background="@android:color/holo_blue_dark"
				    android:text="Sign In"
				    android:layout_below="@+id/autoLoginCheckBox"
				    android:layout_centerHorizontal="true"
				    android:layout_width="200dp"
				    android:layout_height="50dp"/>

				<TextView
				    android:id="@+id/forgetPasswordText"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
				    android:layout_alignTop="@+id/autoLoginCheckBox"
				    android:gravity="right"
				    android:text="Forget Password?"
				    android:textAppearance="?android:attr/textAppearanceSmall" />

			    </RelativeLayout>
	</ScrollView>

</RelativeLayout>
