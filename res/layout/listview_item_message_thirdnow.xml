<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background= "#FFFFFF"
        android:orientation="horizontal" >   
       
        <ImageView android:layout_height="wrap_content"
		android:id="@+id/imageViewCheck_MessageMCAItem" 
		android:src="@drawable/message_uncheck"
		android:layout_gravity="center_vertical"
		android:layout_width="wrap_content" 
		android:layout_alignParentLeft="true"
		android:layout_marginRight="5dip" 
		android:visibility="gone"></ImageView>
         <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlListViewSC_MCA" 
        android:layout_marginTop = "5dip"
        android:layout_marginLeft = "15dip"
       
	    android:paddingLeft="5dip"
	    android:paddingRight="5dip">
        <TextView
   		    android:id="@+id/textViewDateTHNow_send_MCA"
   		    android:layout_width="wrap_content"
   		    android:layout_height="30dip"
   		    android:visibility="gone"
   		    android:layout_marginTop="7dip"
   		    android:layout_marginRight="30dip"
   		    android:layout_alignParentRight="true"
   		    />
   		<ImageView
   		    android:id="@+id/imageViewListViewItemFailureTHNow_MCA"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:layout_marginLeft="10dip"
   		    android:layout_marginRight="0dip"
   		    android:layout_toLeftOf="@id/textViewDateTHNow_send_MCA"
   		    android:layout_alignTop="@id/textViewDateTHNow_send_MCA"
   		    android:layout_centerVertical="true"
   		    android:layout_alignParentRight="true"
   		    />
		<TextView
		    android:id="@+id/textViewContentTHNow_send_MCA"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_marginLeft="25dip"
		    android:layout_marginRight="20dip"
		    android:layout_marginTop="5dip"
		    android:layout_alignParentRight="true"
		    android:layout_below="@id/textViewDateTHNow_send_MCA"
		    android:layout_alignRight="@id/textViewDateTHNow_send_MCA"
		    android:background="@drawable/message_send_bg_rect"  
		    android:visibility="gone"
		    android:padding="5dip"
		    android:textColor="#000000"
		    />
		<TextView
   		    android:id="@+id/textViewDateTHNow_recieve_MCA"
   		    android:layout_width="wrap_content"
   		    android:layout_height="30dip"
   		    android:layout_alignParentLeft="true"
   		    android:visibility="gone"
   		    android:layout_marginTop="7dip"
   		    />
		<TextView
		    android:id="@+id/textViewContentTHNow_recieve_MCA"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_marginRight="20dip"
		    android:layout_marginTop="5dip"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@id/textViewDateTHNow_recieve_MCA"
		    android:layout_alignLeft="@id/textViewDateTHNow_recieve_MCA"
		    android:background="@drawable/message_bg_rect"  
		    android:visibility="gone"
		    android:padding="5dip"
		    android:textColor="#000000"
		    />
		</RelativeLayout>
</LinearLayout>

