<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFFFFF" >
      <RelativeLayout
        android:id="@+id/relativeLayoutBanner_More"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        style ="@style/background_color_blue" 
      >
      	  <ImageButton 
   			    android:id="@+id/iBtnBack_More"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/phone_common_goback" 	
				android:layout_marginLeft="10dip" 
				android:layout_centerVertical="true"
				android:contentDescription="@string/defaultContentDesc"/>
          <TextView 
   			    android:id="@+id/textViewTitle_More"
   			    android:layout_width="wrap_content"
   			    android:layout_height="wrap_content"
   			    android:layout_centerInParent="true"   	  		
   			    android:layout_marginLeft="10dip"	   
   			    style="@style/banner_title" 
          		android:text="@string/textViewTitle_More"  />
     </RelativeLayout>
    <ScrollView  
        android:id="@+id/scrollViewFunction_More" 
   		android:layout_width="match_parent"
   		android:layout_height="match_parent">
          <LinearLayout 
			android:layout_width="match_parent"
   		    android:layout_height="wrap_content"
   		    android:orientation="vertical">
	         <!-- 设置用户自定发稿地址列表 -->
	         <RelativeLayout
	            android:id="@+id/relativeLayoutEmplayeeSendToConfig_More" 
				android:orientation="vertical" android:layout_width="match_parent"
				android:layout_height="wrap_content" android:background="#FFFFFF"
				android:gravity="center_vertical">
				    <RelativeLayout
				        android:layout_width="match_parent"
		   		    	android:layout_height="wrap_content"
		   		    	android:orientation="horizontal"
		   		    	android:gravity="center_vertical">
					    <ImageView 
					        android:id="@+id/imageViewEmployeeSendToConfig_More"
							android:src="@drawable/more_employee_address_icon"
							android:layout_alignParentLeft="true" 
							android:layout_marginLeft="10dip"
							android:layout_width="60dip" 
							android:layout_height="60dip"
							android:paddingBottom="5dip"/>
					   	<TextView 
					   	    android:layout_height="wrap_content" 
					   	    android:id="@+id/textViewEmployeeSendToConfig_More"
							android:text="test" 
							android:layout_width="wrap_content"
							android:layout_toRightOf="@id/imageViewEmployeeSendToConfig_More"
							android:layout_marginLeft="15dip"
							android:textColor="#000000"
							android:textSize="20dip" 
							android:layout_centerVertical="true"/>
			   	</RelativeLayout>
			   	 <View 
						android:layout_width="fill_parent" 
						android:layout_height="1dip"
						android:background="#BEBEBE"
						android:layout_alignParentBottom="true"/>
			</RelativeLayout>
		
			<!-- 设置用户稿签模板 -->
	        <RelativeLayout
	            android:id="@+id/relativeLayoutTemplateConfig_More"  
				android:orientation="vertical" android:layout_width="match_parent"
				android:layout_height="wrap_content" android:background="#FFFFFF"
				android:gravity="center_vertical"
				android:paddingTop="5dip">
				    <RelativeLayout
				        android:layout_width="match_parent"
		   		    	android:layout_height="wrap_content"
		   		    	android:orientation="horizontal"
		   		    	android:gravity="center_vertical">
					    <ImageView 
					        android:id="@+id/imageViewTemplateConfig_More"
							android:src="@drawable/more_template_icon"
							android:layout_alignParentLeft="true" 
							android:layout_marginLeft="10dip"
							android:layout_width="60dip" 
							android:layout_height="60dip"
							android:paddingBottom="5dip"/>
					   	<TextView 
					   	    android:layout_height="wrap_content" 
					   	    android:id="@+id/textViewTemplateConfig_More"
							android:text="test" 
							android:layout_width="wrap_content"
							android:layout_toRightOf="@id/imageViewTemplateConfig_More"
							android:layout_marginLeft="15dip"
							android:textColor="#000000"
							android:textSize="20dip" 
							android:layout_centerVertical="true"/>
			   	</RelativeLayout>
			   	 <View 
						android:layout_width="fill_parent" 
						android:layout_height="1dip"
						android:background="#BEBEBE"
						android:layout_alignParentBottom="true"/>
			</RelativeLayout>
			<!-- 定位服务 -->
	        <RelativeLayout
	            android:id="@+id/relativeLayoutLocation_More"  
				android:orientation="vertical" android:layout_width="match_parent"
				android:layout_height="wrap_content" android:background="#FFFFFF"
				android:gravity="center_vertical"
				android:paddingTop="5dip">
				    <RelativeLayout
				        android:layout_width="match_parent"
		   		    	android:layout_height="wrap_content"
		   		    	android:orientation="horizontal"
		   		    	android:gravity="center_vertical">
					    <ImageView 
					        android:id="@+id/imageViewLocation_More"
							android:src="@drawable/phone_common_location"
							android:layout_alignParentLeft="true" 
							android:layout_marginLeft="15dip"
							android:layout_width="50dip" 
							android:layout_height="50dip"
							android:paddingBottom="5dip"/>
					   	<TextView 
					   	    android:layout_height="wrap_content" 
					   	    android:id="@+id/textViewLocation_More"
							android:text="test" 
							android:layout_width="wrap_content"
							android:layout_toRightOf="@+id/imageViewLocation_More"
							android:layout_marginLeft="15dip"
							android:textColor="#000000"
							android:textSize="20dip" 
							android:layout_centerVertical="true"/>
			   	</RelativeLayout>
			   	 <View 
						android:layout_width="fill_parent" 
						android:layout_height="1dip"
						android:background="#BEBEBE"
						android:layout_alignParentBottom="true"/>
			</RelativeLayout>
			<!-- FTP服务 -->
	        <RelativeLayout
	            android:id="@+id/relativeLayoutFTP_More"  
				android:orientation="vertical" android:layout_width="match_parent"
				android:layout_height="wrap_content" android:background="#FFFFFF"
				android:gravity="center_vertical"
				android:paddingTop="5dip">
				    <RelativeLayout
				        android:layout_width="match_parent"
		   		    	android:layout_height="wrap_content"
		   		    	android:orientation="horizontal"
		   		    	android:gravity="center_vertical">
					    <ImageView 
					        android:id="@+id/imageViewFTP_More"
							android:src="@drawable/phone_common_instantshoot"
							android:layout_alignParentLeft="true" 
							android:layout_marginLeft="15dip"
							android:layout_width="50dip" 
							android:layout_height="50dip"
							android:paddingBottom="5dip"/>
					   	<TextView 
					   	    android:layout_height="wrap_content" 
					   	    android:id="@+id/textViewFTP_More"
							android:text="test" 
							android:layout_width="wrap_content"
							android:layout_toRightOf="@+id/imageViewFTP_More"
							android:layout_marginLeft="15dip"
							android:textColor="#000000"
							android:textSize="20dip" 
							android:layout_centerVertical="true"/>
			   	</RelativeLayout>
			   	 <View 
						android:layout_width="fill_parent" 
						android:layout_height="1dip"
						android:background="#BEBEBE"
						android:layout_alignParentBottom="true"/>
			</RelativeLayout>
		</LinearLayout>
    </ScrollView>
</LinearLayout>
